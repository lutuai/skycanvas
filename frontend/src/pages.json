{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^u-(.*)": "uview-plus/components/u-$1/u-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/generate/index",
      "style": {
        "navigationBarTitleText": "生成视频",
        "navigationBarBackgroundColor": "#1a1a1a",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/works/index",
      "style": {
        "navigationBarTitleText": "我的作品",
        "navigationBarBackgroundColor": "#1a1a1a",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/community/index",
      "style": {
        "navigationBarTitleText": "社区",
        "navigationBarBackgroundColor": "#1a1a1a",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/profile/index",
      "style": {
        "navigationBarTitleText": "我的",
        "navigationBarBackgroundColor": "#1a1a1a",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/credit/logs",
      "style": {
        "navigationBarTitleText": "积分明细",
        "navigationBarBackgroundColor": "#1a1a1a",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/credit/recharge",
      "style": {
        "navigationBarTitleText": "充值积分",
        "navigationBarBackgroundColor": "#1a1a1a",
        "navigationBarTextStyle": "white"
      }
    }
  ],
  "tabBar": {
    "color": "#999999",
    "selectedColor": "#00d9a3",
    "backgroundColor": "#1a1a1a",
    "borderStyle": "black",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "static/tabbar/home.png",
        "selectedIconPath": "static/tabbar/home-active.png"
      },
      {
        "pagePath": "pages/generate/index",
        "text": "生成",
        "iconPath": "static/tabbar/generate.png",
        "selectedIconPath": "static/tabbar/generate-active.png"
      },
      {
        "pagePath": "pages/community/index",
        "text": "社区",
        "iconPath": "static/tabbar/community.png",
        "selectedIconPath": "static/tabbar/community-active.png"
      },
      {
        "pagePath": "pages/profile/index",
        "text": "我的",
        "iconPath": "static/tabbar/profile.png",
        "selectedIconPath": "static/tabbar/profile-active.png"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "SkyCanvas",
    "navigationBarBackgroundColor": "#1a1a1a",
    "backgroundColor": "#0a0a0a"
  }
}

